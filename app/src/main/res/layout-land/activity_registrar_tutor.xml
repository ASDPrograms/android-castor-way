<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#BCF0E4">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BCF0E4"
        tools:context=".RegistrarTutor">

        <ImageView
            android:id="@+id/imgRegresarAzul2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/imgregresarazul"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView4"
            android:src="@drawable/iconappcafeazul"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.06"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.023"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtTitRegistroTutor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dongle_bold"
            android:gravity="center"
            android:text="Registro de Castor"
            android:textColor="#000000"
            android:textSize="42sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gayathri_bold"
            android:text="Ingresa tus datos como tutor"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTitRegistroTutor" />

        <EditText
            android:id="@+id/inputNombre"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/input_border"
            android:ems="10"
            android:fontFamily="@font/gayathri_bold"
            android:hint="Nombre/s"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="#000000"
            android:textColorHint="#7C7878"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintVertical_bias="0.066"
            app:layout_constraintWidth_percent="0.6" />

        <EditText
            android:id="@+id/inputApellidos"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/input_border"
            android:ems="10"
            android:fontFamily="@font/gayathri_bold"
            android:hint="Apellidos"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="#000000"
            android:textColorHint="#7C7878"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputNombre"
            app:layout_constraintVertical_bias="0.036"
            app:layout_constraintWidth_percent="0.6" />

        <EditText
            android:id="@+id/inputEdad"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/input_border"
            android:ems="10"
            android:fontFamily="@font/gayathri_bold"
            android:hint="Edad"
            android:inputType="number"
            android:padding="8dp"
            android:textColor="#000000"
            android:textColorHint="#7C7878"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputApellidos"
            app:layout_constraintVertical_bias="0.037"
            app:layout_constraintWidth_percent="0.6" />

        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/input_border"
            android:ems="10"
            android:fontFamily="@font/gayathri_bold"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:textColor="#000000"
            android:textColorHighlight="#7C7878"
            android:textColorHint="#7C7878"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputEdad"
            app:layout_constraintVertical_bias="0.053"
            app:layout_constraintWidth_percent="0.6" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintWidth_percent="0.6"
            android:background="@drawable/input_border"
            android:ems="10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputEmail"
            app:layout_constraintVertical_bias="0.066">

            <EditText
                android:id="@+id/inputContrasena"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/input_border"
                android:ems="10"
                android:fontFamily="@font/gayathri_bold"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="#000000"
                android:textColorHint="#7C7878"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnPassword"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ImageButton
                android:id="@+id/btnPassword"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Mostrar contraseña"
                android:scaleType="centerInside"
                android:src="@drawable/no_ver_contrasena"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/txtYaTienesCuenta"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:fontFamily="@font/gayathri_bold"
            android:gravity="center"
            android:text="¿Ya tienes una cuenta? -  Inicia sesión ahora"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            app:layout_constraintVertical_bias="0.059" />

        <Button
            android:id="@+id/btnRegistrarTutor"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:backgroundTint="#885551"
            android:text="¡Comienza ahora!"
            android:textColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtYaTienesCuenta"
            app:layout_constraintVertical_bias="0.044" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="354dp"
            android:layout_height="36dp"
            android:fontFamily="@font/gayathri_bold"
            android:gravity="center"
            android:text="Al registrarse en CastorWay, aceptas nuestros Términos y Políticas de privacidad"
            android:textColor="#767676"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnRegistrarTutor"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>