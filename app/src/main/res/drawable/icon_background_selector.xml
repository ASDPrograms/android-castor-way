<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado seleccionado -->
    <item android:state_selected="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">

            <!-- Capa 1: Fondo blanco (cubre todo) -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                </shape>
            </item>

            <!-- Capa 2: Color de selecciÃ³n con bordes y margen -->
            <item android:top="6dp" android:bottom="6dp" android:left="6dp" android:right="6dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/azul_fondo"/>
                    <corners android:radius="12dp"/>
                </shape>
            </item>

        </layer-list>
    </item>

    <!-- Estado normal (fondo blanco) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
        </shape>
    </item>

</selector>
