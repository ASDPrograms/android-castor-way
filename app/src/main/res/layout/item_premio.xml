<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:padding="8dp"
    android:background="@color/azul_fondo">

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:src="@drawable/castortutor"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:fontFamily="@font/gayathri_bold"
            android:text="Ir al cine con tus amigos"
            android:textColor="#1A1A1A"
            android:textSize="15sp"
            android:layout_marginBottom="4dp"
            android:maxLines="1"
            android:layout_weight="0.1"
            android:ellipsize="end"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.1"
            android:gravity="start">

            <!-- Icono de corazÃ³n -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/corazon_vacio"
                android:layout_marginEnd="5dp"/>

            <!-- Icono de trofeo -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/trofeo_vacio"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
