<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BCF0E4"
    tools:context=".InformacionTutor">

    <ImageView
        android:id="@+id/imgRegresarEditAzul2"
        android:layout_width="31dp"
        android:layout_height="22dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.015"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.049"
        app:srcCompat="@drawable/imgregresarazul" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="208dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/iconappcafeazul" />

    <TextView
        android:id="@+id/txtTitEdicionTutor"
        android:layout_width="353dp"
        android:layout_height="93dp"
        android:fontFamily="@font/dongle_bold"
        android:gravity="center"
        android:lineSpacingExtra="0dp"
        android:lineSpacingMultiplier="0.5"
        android:text="Edición de datos de Castor"
        android:textColor="#000000"
        android:textSize="55sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.03" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="504dp"
        android:fontFamily="@font/gayathri_bold"
        android:text="Ingresa tus nuevos datos como tutor"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitEdicionTutor"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/inputEditNombre"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/input_border"
        android:ems="10"
        android:fontFamily="@font/gayathri_bold"
        android:hint="Nombre/s"
        android:inputType="text"
        android:padding="8dp"
        android:textColor="#000000"
        android:textColorHint="#7C7878"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.066" />

    <EditText
        android:id="@+id/inputEditApellidos"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/input_border"
        android:ems="10"
        android:fontFamily="@font/gayathri_bold"
        android:hint="Apellidos"
        android:inputType="text"
        android:padding="8dp"
        android:textColor="#000000"
        android:textColorHint="#7C7878"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputEditNombre"
        app:layout_constraintVertical_bias="0.036" />

    <EditText
        android:id="@+id/inputEditEdad"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/input_border"
        android:ems="10"
        android:fontFamily="@font/gayathri_bold"
        android:hint="Edad"
        android:inputType="number"
        android:padding="8dp"
        android:textColor="#000000"
        android:textColorHint="#7C7878"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputEditApellidos"
        app:layout_constraintVertical_bias="0.037" />

    <EditText
        android:id="@+id/inputEditEmail"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:background="@drawable/input_border"
        android:ems="10"
        android:fontFamily="@font/gayathri_bold"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="8dp"
        android:textColor="#000000"
        android:textColorHighlight="#7C7878"
        android:textColorHint="#7C7878"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.319"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputEditEdad"
        app:layout_constraintVertical_bias="0.049" />

    <EditText
        android:id="@+id/inputEditContrasena"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/input_border"
        android:ems="10"
        android:fontFamily="@font/gayathri_bold"
        android:hint="Contraseña"
        android:inputType="text"
        android:padding="8dp"
        android:textColor="#000000"
        android:textColorHint="#7C7878"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputEditEmail"
        app:layout_constraintVertical_bias="0.057" />

    <EditText
        android:id="@+id/inputEditCodigoPresa"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:background="@drawable/input_border"
        android:ems="10"
        android:fontFamily="@font/gayathri_bold"
        android:hint="Código presa"
        android:inputType="text"
        android:padding="8dp"
        android:textColor="#000000"
        android:textColorHint="#7C7878"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.319"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputEditContrasena"
        app:layout_constraintVertical_bias="0.114" />

    <Button
        android:id="@+id/btnEditarInfoTutor"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:backgroundTint="#885551"
        android:text="Editar"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputEditCodigoPresa"
        app:layout_constraintVertical_bias="0.246" />

    <ImageView
        android:id="@+id/imgCopiarCodPresa"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/inputEditCodigoPresa"
        app:layout_constraintTop_toBottomOf="@+id/inputEditContrasena"
        app:layout_constraintVertical_bias="0.022"
        app:srcCompat="@drawable/copyportapapelescafe" />

    <ImageView
        android:id="@+id/imgCopiarCorreo"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/inputEditEmail"
        app:layout_constraintTop_toBottomOf="@+id/inputEditEdad"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/copyportapapelescafe" />

</androidx.constraintlayout.widget.ConstraintLayout>