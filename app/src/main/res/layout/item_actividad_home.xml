<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/border_hijos"
    android:layout_margin="10dp">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:src="@drawable/icon_reloj_azul"
        android:contentDescription="Imagen de la actividad"
        android:layout_marginEnd="8dp" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtHijoActividad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dongle_bold"
                android:text="Beber Agua"
                android:textColor="#1A1A1A"
                android:textSize="35sp"
                android:maxHeight="60dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtaActHora"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="wrap_content"
                android:text="11:11 - 12:12"
                android:textSize="15sp"
                android:fontFamily="@font/gayathri_bold"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/txtaActProceso"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="En Proceso"
                android:textSize="30sp"
                android:background="@drawable/border_act_proce_home"
                android:fontFamily="@font/dongle_bold"
                android:textColor="@color/amarillo_actis"
                android:gravity="center"/>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>