<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/border_hijos"
    android:layout_margin="10dp"
    android:id="@+id/LinearPrin"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    >

<ImageView
        android:id="@+id/imgActividad"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:src="@drawable/icon_reloj_azul"
        android:contentDescription="Imagen de la actividad"
        android:layout_marginEnd="8dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtHijoActividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dongle_bold"
            android:text="Nombre Actividad"
            android:textColor="#1A1A1A"
            android:textSize="35sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxHeight="60dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtaActHora"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="00:00 - 00:00"
                android:textSize="18sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/gayathri_bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txtaActProceso"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Estado"
                android:textSize="30sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:background="@drawable/border_act_proce_home"
                android:fontFamily="@font/dongle_bold"
                android:textColor="@color/amarillo_estatus_texto"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
