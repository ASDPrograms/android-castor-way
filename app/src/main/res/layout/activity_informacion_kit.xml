<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#879FD4"
    tools:context=".InformacionKit">

    <ImageView
        android:id="@+id/imgCopiarCodPresaKit"
        android:layout_width="34dp"
        android:layout_height="34dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toEndOf="@+id/inputCodPresa2"
        app:layout_constraintTop_toBottomOf="@+id/inputEdad2"
        app:layout_constraintVertical_bias="0.09"
        app:srcCompat="@drawable/copyportapapelesamarillo" />

    <ImageView
        android:id="@+id/imgCopiarNombreUsuarioKit"
        android:layout_width="34dp"
        android:layout_height="34dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toEndOf="@+id/inputNombreUsuario2"
        app:layout_constraintTop_toBottomOf="@+id/txtTitEdicionKit"
        app:layout_constraintVertical_bias="0.12"
        app:srcCompat="@drawable/copyportapapelesamarillo" />

    <Button
        android:id="@+id/btnEditarKit"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:backgroundTint="#FFDF9B"
        android:text="Editar"
        android:textColor="#000000"
        android:textColorLink="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputCodPresa2"
        app:layout_constraintVertical_bias="0.105" />

    <EditText
        android:id="@+id/inputNombreUsuario2"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:background="@drawable/input_border"
        android:ems="10"
        android:fontFamily="@font/gayathri_bold"
        android:hint="Nombre de usuario"
        android:inputType="text"
        android:padding="8dp"
        android:textColor="#000000"
        android:textColorHint="#7C7878"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.319"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitEdicionKit"
        app:layout_constraintVertical_bias="0.11" />

    <EditText
        android:id="@+id/inputNombre2"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/input_border"
        android:ems="10"
        android:fontFamily="@font/gayathri_bold"
        android:hint="Nombre"
        android:inputType="text"
        android:padding="8dp"
        android:textColor="#000000"
        android:textColorHint="#7C7878"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputNombreUsuario2"
        app:layout_constraintVertical_bias="0.035" />

    <EditText
        android:id="@+id/inputApellidos2"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/input_border"
        android:ems="10"
        android:fontFamily="@font/gayathri_bold"
        android:hint="Apellidos"
        android:inputType="text"
        android:padding="8dp"
        android:textColor="#000000"
        android:textColorHint="#7C7878"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputNombre2"
        app:layout_constraintVertical_bias="0.045" />

    <EditText
        android:id="@+id/inputEdad2"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/input_border"
        android:ems="10"
        android:fontFamily="@font/gayathri_bold"
        android:hint="Edad"
        android:inputType="number"
        android:padding="8dp"
        android:textColor="#000000"
        android:textColorHighlight="#7C7878"
        android:textColorHint="#7C7878"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputApellidos2"
        app:layout_constraintVertical_bias="0.048" />

    <EditText
        android:id="@+id/inputCodPresa2"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:background="@drawable/input_border"
        android:ems="10"
        android:fontFamily="@font/gayathri_bold"
        android:hint="Código presa"
        android:inputType="text"
        android:padding="8dp"
        android:textColor="#000000"
        android:textColorHint="#7C7878"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.319"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputEdad2"
        app:layout_constraintVertical_bias="0.06" />

    <ImageView
        android:id="@+id/imgRegresarEditNegro"
        android:layout_width="31dp"
        android:layout_height="22dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.015"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.049"
        app:srcCompat="@drawable/regresarnegro" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="208dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/logocastorwaynegrofull" />

    <TextView
        android:id="@+id/txtTitEdicionKit"
        android:layout_width="353dp"
        android:layout_height="93dp"
        android:fontFamily="@font/dongle_bold"
        android:gravity="center"
        android:lineSpacingExtra="0dp"
        android:lineSpacingMultiplier="0.5"
        android:text="Edición de datos de Kit"
        android:textColor="#000000"
        android:textSize="55sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.03" />

</androidx.constraintlayout.widget.ConstraintLayout>