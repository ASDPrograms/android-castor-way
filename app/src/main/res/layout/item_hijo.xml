<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/border_hijos"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/imgHijo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/icn_user_gris"
        android:contentDescription="Imagen del hijo"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/txtHijoNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del Hijo"
        android:textSize="25sp"

        android:fontFamily="@font/dongle_bold"
        android:textColor="#1A1A1A" />
</LinearLayout>