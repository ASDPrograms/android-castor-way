<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_sup_modal"
    android:padding="16dp"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/modalBottomSheetActis">

    <View
        android:layout_width="40dp"
        android:layout_height="5dp"
        android:background="@drawable/border_mover_modal_bottom"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="10dp">
            <ImageView
                android:id="@+id/imgActividad"
                android:layout_width="60dp"
                android:layout_gravity="center"
                android:layout_height="60dp">
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre hábito"
                android:lineHeight="28dp"
                android:textSize="40sp"
                android:fontFamily="@font/dongle_bold"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="start"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/azulito_juerte"
                    android:layout_marginRight="5dp">
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo hábito"
                    android:id="@+id/txtTipoHabito"
                    android:textSize="18sp"
                    android:gravity="start"
                    android:fontFamily="@font/gayathri_bold"
                    android:textColor="@color/black">
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/btnVerMasInfoActi"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/flechita_derecha">
            </ImageView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/verdecitu_fuerte">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/layout_btn_edit_acti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp">
                <ImageView
                    android:id="@+id/btnEditar"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_edit_white"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/border_edit_acti_button"
                    android:padding="10dp"
                    ></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Editar"
                    android:layout_gravity="center"
                    android:fontFamily="@font/dongle_bold"
                    android:textSize="30sp"
                    android:textColor="@color/azulito_juerte"></TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/layout_btn_borrar_acti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp">
                <ImageView
                    android:id="@+id/btnBorrar"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_borrar_white"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/border_borrar_acti_button"
                    android:padding="10dp"
                    ></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Borrar"
                    android:layout_gravity="center"
                    android:fontFamily="@font/dongle_bold"
                    android:textSize="30sp"
                    android:textColor="@color/rojito"></TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/cont_num_ramitas_juntas"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_ramitas_juntas">
                </ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                >
                <TextView
                    android:id="@+id/numRamitas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 ramitas"
                    android:layout_gravity="center"
                    android:textColor="@color/cafe_ramita"
                    android:fontFamily="@font/dongle_bold"
                    android:textSize="40sp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingRight="15dp"
                android:paddingLeft="15dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_mas_info_i"
                    android:layout_gravity="center"></ImageView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
