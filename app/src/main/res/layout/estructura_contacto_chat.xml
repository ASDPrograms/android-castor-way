<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/input_border"
    android:layout_margin="15dp"
    android:clickable="true"
    android:id="@+id/layout_contacto_usr">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/imagenUsuario"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/icn_user_gris" />
        <View
            android:id="@+id/circuloEstadoConeccion"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/circ_estado_coneccion" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.65"
        android:layout_marginLeft="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/nombreUsuarioChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="..."
                android:layout_marginRight="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/gayathri_bold"
                android:textSize="20dp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ultMsjChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gayathri_thin"
                android:text="..."
                android:textColor="#1A1A1A"
                android:textSize="14dp"
                android:layout_marginRight="10dp"
                android:maxLines="1"
                android:ellipsize="end"></TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/horaUltMsjChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gayathri_thin"
            android:text="..."
            android:gravity="top"
            android:textColor="#1A1A1A"
            android:textSize="14dp"></TextView>
    </LinearLayout>
</LinearLayout>
